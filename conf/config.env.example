# ===== Gmail / IMAP =====
GMAIL_USER="seu_email@gmail.com"
GMAIL_APP_PASS="sua_app_password_aqui"
IMAP_HOST="imap.gmail.com"
IMAP_PORT="993"

# ===== Labels (Gmail) =====
LABEL_INFECTED="INFETADOS"
LABEL_CLEAN="NAO_INFETADOS"
LABEL_SUSPECT="SUSPEITOS"

# ===== Sandbox =====
CUCKOO_URL="http://127.0.0.1:8090"
POLL_SECONDS="10"
POLL_MAX_TRIES="60"
CUCKOO_API_TOKEN="seu_token_aqui"
CUCKOO_API_AUTH="0"
CUCKOO_AUTH_SCHEME="bearer"

# ===== Paths =====
BASE_DIR="/opt/email-sandbox-automation"
ATTACH_DIR="/opt/email-sandbox-automation/tmp/attachments"

# ===== Safety / Tool =====
DRY_RUN="0"
GMA_VERSION="1.1"
DEBUG=1

# ===== Analysis Parameters =====
SCORE_INFECTED=4.0
SCORE_SUSPECT=2.0
CUCKOO_TIMEOUT=120
FLAG_MACRO_AS_INFECTED=1

# ===== Reporting =====
SEND_REPORT="1"
REPORT_TO="seu_email@gmail.com"
REPORT_SUBJECT_PREFIX="[GMA REPORT]"
ATTACH_REPORT="1"

# ===== URL Analysis =====
ENABLE_URL_ANALYSIS="1"
MAX_URLS_PER_EMAIL="10"
URL_ALLOWLIST_DOMAINS=""

# ===== SMTP (Gmail) =====
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="seu_email@gmail.com"
SMTP_APP_PASS="sua_app_password_aqui"

# ===== Monthly report schedule =====
MONTHLY_REPORT_DAY="1"      # dia do mês
MONTHLY_REPORT_HOUR="9"     # hora (0-23)
MONTHLY_REPORT_MIN="0"      # minuto (0-59)

# ===== Advanced Settings =====
SANDBOX_MODE="hybrid"
MAX_ATTACHMENT_MB="50"

